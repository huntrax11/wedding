<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) and !msg.blank? %>
    <div class="alert alert-<%= name == :notice ? 'success' : 'danger' %>">
      <a class="close" data-dismiss="alert">&#215;</a>
      <%= content_tag :div, simple_format(msg), id: "flash_#{name}" %>
    </div>
  <% end %>
<% end %>